<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<ScrollPane prefWidth="603.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="CENTER">
         <children>
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="tf_codeConfiguration" promptText="Code Configuration" />
                  <HBox>
                     <children>
                        <HBox alignment="CENTER" fillHeight="false" spacing="40.0">
                           <children>
                              <VBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <HBox alignment="CENTER" spacing="40.0">
                                       <children>
                                          <Label text="Input  " />
                                          <TextField fx:id="tf_input" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="40.0">
                                       <children>
                                          <Label text="Output" />
                                          <TextField fx:id="tf_output" editable="false" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                           <children>
                              <Button fx:id="btn_proccess" mnemonicParsing="false" onAction="#proccessBtnClick" text="Proccess" />
                              <Button fx:id="btn_clear" mnemonicParsing="false" onAction="#clearBtnClick" text="Clear" />
                              <Button fx:id="btn_reset" mnemonicParsing="false" onAction="#resetBtnClick" text="Reset" />
                           </children>
                        </VBox>
                        <VBox spacing="10.0">
                           <children>
                              <TextField fx:id="tf_searchBar" onInputMethodTextChanged="#searchBarTextChanged" />
                              <ListView prefHeight="200.0" prefWidth="200.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <TextArea prefHeight="95.0" prefWidth="600.0" promptText=" DM place holder" />
            <TextArea prefHeight="75.0" prefWidth="600.0" promptText="Candidates place holder" />
         </children>
      </VBox>
   </content>
</ScrollPane>
