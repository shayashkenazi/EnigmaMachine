<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="sp_mainPage" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainApp.AppController">
   <content>
      <VBox fx:id="vb_MainApp" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" text="The Enigma Machine" textAlignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font></Label>
            <HBox prefHeight="55.0" prefWidth="667.0" spacing="20.0">
               <children>
                  <Button fx:id="btn_loadFile" mnemonicParsing="false" onAction="#loadFileBtnClick" text="load file" />
                  <TextField fx:id="tf_xmlPath" prefHeight="25.0" prefWidth="502.0" />
               </children>
            </HBox>
            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
              <tabs>
                <Tab fx:id="tab_machine" text="Machine">
                     <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <TextArea fx:id="tf_machineDetails" prefHeight="115.0" prefWidth="600.0" />
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <HBox fx:id="hb_setCode" alignment="CENTER" prefHeight="100.0" prefWidth="352.0" spacing="40.0">
                                       <children>
                                          <Button fx:id="btn_RandomCode" mnemonicParsing="false" onAction="#randomCodeBtnClick" text="Random code" />
                                          <Button fx:id="btn_SetCode" mnemonicParsing="false" onAction="#setCodeBtnClick" text="Set code" />
                                       </children>
                                    </HBox>
                                    <TextArea fx:id="tf_machineConfiguration" prefHeight="100.0" prefWidth="302.0" />
                                 </children>
                              </HBox>
                              <ComboBox fx:id="cb_styles" prefHeight="25.0" prefWidth="103.0" />
                              <Label prefHeight="17.0" prefWidth="51.0" text="Style">
                                 <font>
                                    <Font name="System Bold Italic" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                <Tab fx:id="tab_EncryptDecrypt" text="Encrypt / Decrypt" />
                  <Tab fx:id="tab_bruteForce" text="Brute Force" />
              </tabs>
            </TabPane>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </content>
</ScrollPane>
